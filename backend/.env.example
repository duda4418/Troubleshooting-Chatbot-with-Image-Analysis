# Example env file

OPENAI_API_KEY=

# App settings
APP_ENV=development
SECRET_KEY=change_me_to_a_secure_random_value

# Database (local docker defaults)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=ChangeMe!123
POSTGRES_DB=appdb
POSTGRES_HOST=db
POSTGRES_PORT=5432

DATABASE_URL=postgresql+asyncpg://postgres:ChangeMe!123@db:5432/appdb

# Safe timeouts (ms) during migrations
DB_LOCK_TIMEOUT_MS=5000
DB_STATEMENT_TIMEOUT_MS=60000

# Auth
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS (comma separated)
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Chroma vector store
CHROMA_PATH=.chroma
CHROMA_COLLECTION=troubleshoot-cases
CHROMA_AUTO_SEED=true
KNOWLEDGE_FILE=app/data/troubleshoot_map.json
