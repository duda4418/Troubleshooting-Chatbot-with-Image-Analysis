# Example env file

OPENAI_API_KEY=
OPENAI_RESPONSE_MODEL=gpt-5-mini
OPENAI_VISION_MODEL=gpt-5-nano
# Pricing rates expressed per 1M tokens for input/output (JSON object)
OPENAI_PRICING={"gpt-5-nano":{"input":0.05,"output":0.4},"gpt-5-mini":{"input":0.25,"output":2.0},"gpt-4o-mini":{"input":0.15,"output":0.60},"gpt-4.1-nano":{"input":0.10,"output":0.40}}

# App settings
APP_ENV=development
SECRET_KEY=change_me_to_a_secure_random_value

# Database (local docker defaults)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=ChangeMe!123
POSTGRES_DB=appdb
POSTGRES_HOST=db
POSTGRES_PORT=5432

# DATABASE_URL overrides the individual POSTGRES_* values (recommended for cloud providers).
# When the password already contains URL escapes (e.g. %21 for '!'), double the percent
# sign so Alembic's config parser keeps the literal value.
# Example for Azure Flexible Server:
# DATABASE_URL=postgresql+asyncpg://postgres:ChangeMe!123@<HOST>:5432/appdb
DATABASE_URL=postgresql+asyncpg://postgres:ChangeMe!123@db:5432/appdb

# Safe timeouts (ms) during migrations
DB_LOCK_TIMEOUT_MS=5000
DB_STATEMENT_TIMEOUT_MS=60000

# Auth
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS (comma separated)
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
